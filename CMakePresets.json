{
    "version": 3,
    "configurePresets": [
        {
            "name": "win64",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "set"
            },
            "toolchainFile": "${sourceDir}/dependencies/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build_win64",
            "cacheVariables": {
                "VCPKG_INSTALLED_DIR": "${sourceDir}/dependencies/vcpkg_installed",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
	{
	    "name": "linux-base",
	    "generator": "Ninja",
	    "toolchainFile": "${sourceDir}/dependencies/vcpkg/scripts/buildsystems/vcpkg.cmake",
	    "cacheVariables": {
		"VCPKG_INSTALLED_DIR": "${sourceDir}/dependencies/vcpkg_installed"
	    }
	},
	{
	    "name": "linux-release",
	    "inherits": "linux-base",
	    "binaryDir": "${sourceDir}/build_linux_release",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release"
	    }
	}
    ]
  }
